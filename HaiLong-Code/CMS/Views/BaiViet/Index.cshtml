@model CMS.Models.Post
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="baivietpg col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-controller="postController">
    <input type="hidden" value="@Model.idPost" id="idPost" />
    <span us-spinner="{radius:15, width:4, length: 8}"></span>
    <!--Bài viết-->
    <article class="col-xs-12 col-sm-12 col-md-9 col-lg-9">

        <!--Thông tin-->
        <div class="thongtin col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <!--Tiêu đề bài viết-->
            <p class="tieude">{{post.title}}</p>

            <!--Ngày đăng-->
            <p class="thoigian">{{post.timeModified | date:"dd/MM/yyyy"}}</p>
        </div>

        <!--Nội dung bài viết-->
        <div class="noidung col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-bind-html="post.content"></div>
    </article>

    <!--Bài viết liên quan-->
    <aside class="col-xs-12 col-sm-12 col-md-3 col-lg-3">

        <!--Tiêu đề mục-->
        <p class="tieude">Bài viết khác</p>

        <!--Danh sách bài viết-->
        <div class="cacbaiviet col-xs-12 col-sm-12 col-md-12 col-lg-12">

            <!--Từng bài viết-->
            <a href="/bai-viet/{{value.alias}}-{{value.idPost}}" class="baiviet col-xs-12 col-sm-6 col-md-12 col-lg-12" ng-repeat="(index, value) in relatedPosts">
                <!--Ảnh bài viết-->
                <img ng-src="{{value.image}}" alt="{{value.title}}" class="img-responsive col-xs-12 col-sm-12 col-md-6 col-lg-6" />

                <!--Thông tin-->
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                    <p class="tieude">{{value.title}}</p>
                    <p class="tomtat" ng-bind-html="value.content | limitTo:50"></p>
                </div>
            </a>
        </div>
    </aside>
</section>